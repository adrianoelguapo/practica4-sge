<?xml version = "1.0" encoding = "utf-8"?>
<odoo>

    <!-- Acción principal del módulo que abre el modelo biblioteca.ejemplar y muestra sus vistas. -->
    <record id = 'biblioteca_ejemplar_action' model = 'ir.actions.act_window'>

        <!-- Título visible de la ventana -->
        <field name = "name">Ejemplares</field>

        <!-- Modelo al que se refiere la acción -->
        <field name = "res_model">biblioteca.ejemplar</field>

        <!-- Tipo de vistas que se mostrarán: list (tabla), form (formulario) -->
        <field name = "view_mode">list,form</field>

    </record>

    <!-- Menú del modelo que aparecerá en la barra superior -->
    <menuitem name = "Ejemplares" id = "biblioteca_ejemplar_menu" parent = "biblioteca_base_menu" action = "biblioteca_ejemplar_action"/>

    <!-- Vista para crear y editar ejemplares -->
    <record id = "biblioteca_ejemplar_view_form" model = "ir.ui.view">

        <!-- Nombre de la vista -->
        <field name = "name">Formulario de Ejemplar</field>

        <!-- Modelo al que pertenece esta vista -->
        <field name = "model">biblioteca.ejemplar</field>

        <!-- Estructura XML de la vista -->
        <field name = "arch" type = "xml">

            <!-- Vista tipo formulario -->
            <form>

                <!-- Agrupación de campos -->
                <group>

                    <field name = "comic_id"/>      <!-- ID del cómic -->
                    <field name = "socio_id"/>      <!-- ID del socio -->
                    <field name = "fecha_inicio"/>  <!-- Fecha de inicio del préstamo -->
                    <field name = "fecha_fin"/>     <!-- Fecha de fin del préstamo -->
                </group>

            </form>

        </field>

    </record>

    <!-- Vista de lista de ejemplares -->
    <record id = "biblioteca_ejemplar_view_tree" model = "ir.ui.view">

        <!-- Nombre interno de la vista -->
        <field name = "name">Lista de Ejemplares</field>

        <!-- Modelo al que pertenece esta vista -->
        <field name = "model">biblioteca.ejemplar</field>

        <!-- Estructura XML de la vista -->
        <field name = "arch" type = "xml">

            <!-- Vista tipo lista -->
            <list>

                <field name = "comic_id"/>       <!-- ID del cómic -->
                <field name = "socio_id"/>       <!-- ID del socio -->
                <field name = "fecha_inicio"/>   <!-- Fecha de inicio del préstamo -->
                <field name = "fecha_fin"/>      <!-- Fecha de fin del préstamo -->

            </list>

        </field>

    </record>

</odoo>
